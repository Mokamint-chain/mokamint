<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                              http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <maven.compiler.source>11</maven.compiler.source>
      <maven.compiler.target>11</maven.compiler.target>
      <failOnMissingWebXml>false</failOnMissingWebXml>
      <hotmoka.version>1.1.0</hotmoka.version>
      <spacemint.version>1.0.0</spacemint.version>
    </properties>

    <groupId>io.hotmoka</groupId>
    <artifactId>spacemint</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>
    <name>Mokamint</name>
    <description>A generic proof-of-space blockchain engine.</description>
	<url>https://github.com/Hotmoka/spacemint</url>

    <organization>
      <url>https://www.mokamint.io</url>
      <name>Mokamint</name>
    </organization>
    <inceptionYear>2023</inceptionYear>

    <licenses>
      <license>
	    <name>The Apache License, Version 2.0</name>
	    <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      </license>
    </licenses>

    <developers>
      <developer>
	   <name>Fausto Spoto</name>
	    <email>fausto.spoto@hotmoka.io</email>
	    <organization>Hotmoka</organization>
	    <organizationUrl>https://www.hotmoka.io</organizationUrl>
	    <timezone>UTC+01:00</timezone>
      </developer>
    </developers>

    <modules>
      <module>io-mokamint-node-local</module>
      <module>io-mokamint-node-api</module>
      <module>io-mokamint-miner-api</module>
      <module>io-mokamint-miner-local</module>
      <module>io-mokamint-miner-remote</module>
      <module>io-mokamint-plotter</module>
      <module>io-mokamint-plotter-api</module>
      <module>io-mokamint-nonce-api</module>
      <module>io-mokamint-nonce</module>
      <module>io-mokamint-application-api</module>
    </modules>

    <profiles>
	  <profile>
	    <id>full</id>
        <build>
          <plugins>
            <!-- for deployment, jars get signed -->
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-gpg-plugin</artifactId>
              <version>1.6</version>
              <executions>
                <execution>
                  <id>sign-artifacts</id>
                  <phase>verify</phase>
                  <goals>
                    <goal>sign</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>
            <!-- for deployment, source jars get generated -->
            <plugin>
      		  <groupId>org.apache.maven.plugins</groupId>
        	  <artifactId>maven-source-plugin</artifactId>
    	      <version>3.2.0</version>
    	      <executions>
        	    <execution>
                  <id>attach-sources</id>
                  <goals>
                    <goal>jar-no-fork</goal>
                  </goals>
            	</execution>
        	  </executions>
	        </plugin>
	        <plugin>
	          <groupId>org.apache.maven.plugins</groupId>
    	      <artifactId>maven-javadoc-plugin</artifactId>
        	  <version>3.2.0</version>
          	  <executions>
            	<execution>
              	  <id>attach-javadocs</id>
              	  <goals>
                    <goal>jar</goal>
              	  </goals>
            	</execution>
              </executions>
            </plugin>
          </plugins>
        </build>
      </profile>
    </profiles>

    <distributionManagement>
      <snapshotRepository>
        <id>ossrh</id>
        <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
      </snapshotRepository>
      <repository>
        <id>ossrh</id>
        <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
      </repository>
    </distributionManagement>

    <scm>
      <connection>scm:git:git://github.com/Hotmoka/spacemint.git</connection>
      <developerConnection>scm:git:git@github.com:Hotmoka/spacemint.git</developerConnection>
      <url>https://github.com/Hotmoka/spacemint</url>
      <tag>HEAD</tag>
    </scm>

    <build>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-clean-plugin</artifactId>
	      <version>3.1.0</version>
	      <configuration>
	        <failOnError>false</failOnError>
	        <filesets>
	          <fileset>
		        <directory>modules</directory>
		        <includes>
		          <include>**/*</include>
		        </includes>
		        <followSymlinks>false</followSymlinks>
	          </fileset>
	          <fileset>
		        <directory>docs</directory>
		        <includes>
		          <include>**/*</include>
		        </includes>
		        <followSymlinks>false</followSymlinks>
	          </fileset>
	        </filesets>
	      </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
	      <version>3.8.1</version>
	      <configuration>
	        <release>11</release>
	      </configuration>
        </plugin>
        <plugin>
	      <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>3.1.2</version>
          <executions>
            <execution>
              <id>copy-unnamed-module</id>
              <phase>package</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <outputDirectory>${project.parent.basedir}/modules/unnamed</outputDirectory>
                <excludeArtifactIds>
                  <!-- we exclude all modules built by Maven: their build will put them at the right place -->
                  io-mokamint-node-local,
                  io-mokamint-node-api,
                  io-mokamint-miner-api,
                  io-mokamint-miner-local,
                  io-mokamint-miner-remote,
                  io-mokamint-plotter,
                  io-mokamint-plotter-api,
                  io-mokamint-nonce,
                  io-mokamint-nonce-api,
                  io-mokamint-application-api,
                  <!-- we exclude all modules that go into the explicit folder -->
                  bcprov-jdk15on,
                  io-hotmoka-beans,
                  io-hotmoka-constants,
                  io-hotmoka-crypto,
                  io-hotmoka-crypto-api,
                  <!-- we exclude all modules that go into the automatic folder -->
                  <!-- we exclude all modules that are only used for testing -->
                  junit-jupiter,
                  junit-jupiter-api,
                  junit-jupiter-engine,
                  junit-jupiter-params,
                  junit-platform-commons,
                  junit-platform-engine,
                  apiguardian-api,
                  opentest4j
                </excludeArtifactIds>
              </configuration>
            </execution>
            <execution>
              <id>copy-automatic-modules</id>
              <phase>package</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <outputDirectory>${project.parent.basedir}/modules/automatic</outputDirectory>
                <includeArtifactIds>
                  none
                </includeArtifactIds>
              </configuration>
            </execution>
            <execution>
              <id>copy-explicit-modules</id>
              <phase>package</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <outputDirectory>${project.parent.basedir}/modules/explicit</outputDirectory>
                <includeArtifactIds>
                  bcprov-jdk15on,
                  io-hotmoka-beans,
                  io-hotmoka-constants,
                  io-hotmoka-crypto,
                  io-hotmoka-crypto-api
                </includeArtifactIds>
              </configuration>
            </execution>
          </executions>
        </plugin>
	    <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-failsafe-plugin</artifactId>
          <version>2.22.0</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>3.0.0-M4</version>
          <configuration>
            <includes>
              <include>*.java</include>
            </includes>
     	  </configuration>
        </plugin>
        <plugin>
          <groupId>org.sonatype.plugins</groupId>
          <artifactId>nexus-staging-maven-plugin</artifactId>
          <version>1.6.8</version>
          <extensions>true</extensions>
          <configuration>
            <serverId>ossrh</serverId>
            <nexusUrl>https://s01.oss.sonatype.org/</nexusUrl>
            <autoReleaseAfterClose>true</autoReleaseAfterClose>
          </configuration>
        </plugin>
      </plugins>
    </build>
</project>
